{% extends "layout.html.twig" %}

{% block title %}
Confirmation avant paiement
{% endblock %}

{% block body %}
    <h2 style="text-align: center">Récapitulatif de commande</h2>
    <div class="well">
        <div>
            {# On affiche tous les messages flash dont le nom est « info » #}
            {% for message in app.session.flashbag.get('erreur') %}
                <p>Message flash : {{ message }}</p>
            {% endfor %}
        </div>
        <div class="recap">
            <strong>Mail de contact</strong> : {{ order.mail }}<br/>
            <strong>Date de la visite</strong> : {{ order.visitDate|date("d/m/Y") }}
        </div>
        {% for ticket in order.tickets %}
            <h3><span class="glyphicon glyphicon-user" style="font-size:25px; color:#33b5e5"></span> Billet {{ loop.index }}</h3>
            <ul>
                <li>Nom : {{ ticket.name }}</li>
                <li>Prénom : {{ ticket.forename }}</li>
                <li>Date de naissance : {{ ticket.birthDate|date("d/m/Y") }}</li>
                <li>Prix du billet : <strong>{{ ticket.price }}€</strong></li>

            </ul>
                {% if ticket.reduced %}
                    <em>Billet à tarif réduit - Veuillez vous munir du justificatif adéquat sous peine de vous voir refuser l'entrée au musée</em>
                {% endif %}

        {% endfor %}

        <h3>Prix total de la commande : {{ order.price }} €</h3>

        <form method="POST">

                <script
                        src="https://checkout.stripe.com/checkout.js"
                        class="stripe-button"
                        data-key= "{{ stripe_api }}"
                        data-amount="{{ order.price * 100 }}"
                        data-email=" {{ order.mail }}"
                        data-name="Payez votre réservation"
                        data-description="Vous recevrez vos billets par email"
                        data-image="https://stripe.com/img/documentation/checkout/marketplace.png"
                        data-locale="auto"
                        data-currency="eur">
                </script>
            <script>
                document.getElementsByClassName("stripe-button-el")[0].style.display = 'none';
            </script>
            <div class="row" style="margin-right:-3px;margin-left:-3px">
            <button class="btn btn-info btn-md"><span class="glyphicon glyphicon-shopping-cart"></span> Payez par carte bancaire</button>
                <div class="btn-group pull-right">
                <a class="btn btn-info btn-md" href= {{ path("commande") }}>Modifier ma commande</a>
                <a class="btn btn-info btn-md" href=" {{ path("billets") }}">Modifier mes billets</a>
                </div>
            </div>
        </form>
    </div>

{% endblock %}
